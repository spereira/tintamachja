{% extends "layout.html.twig" %}
{% set locataireMenu = true %}

{% block title %}Locataires{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if locataires %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    <th>Prénom</th>
                </tr>
            </thead>
            {% for locataire in locataires %}
                <tr>
                    <td><a href="/locataire/{{ locataire.id }}">{{ locataire.nom }}</a></td>
                    <td>{{ locataire.prenom }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun locataire trouvé.</div>
{% endif %}   
{% endblock %}