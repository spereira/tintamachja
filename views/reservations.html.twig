{% extends "layout.html.twig" %}
{% set reservationMenu = true %}

{% block title %}Reservations{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if reservations %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Numéro de réservation </th>
                    <th>Date de la réservation</th>
                    <th>locataire</th>
					<th>forfait</th>
                    <th>Date d'arrivée</th>
                    <th>Date de départ</th>
                    <th>Etat de la réservation</th>
                    <th>Nombre de nuits</th>
                    <th>Nombre d'adultes</th>
					<th>Nombre d'enfants</th>
                    <th>Prix de la réservation</th>
                </tr>
            </thead>
            {% for reservation in reservations %}
                <tr>

                    <td>{{ reservation.num }}</td>
                    <td>{{ reservation.dateResa }}</td>
                    <td>{{ reservation.idLocataire.nom }}, {{ reservation.idLocataire.prenom}}</td>
					<td>{{ reservation.idForfait.libelle}}</td>
                    <td>{{ reservation.dateA }}</td>
                    <td>{{ reservation.dateD }}</td>
                    <td>{{ reservation.etat }}</td>
                    <td>{{ reservation.nbNuit }}</td>
                    <td>{{ reservation.nbAdulte }}</td>
					 <td>{{ reservation.nbEnfant }}</td>
                    <td>{{ reservation.montant }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucune réservation trouvée.</div>
{% endif %}   
{% endblock %}