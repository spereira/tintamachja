{% extends "layout.html.twig" %}
{% set villaMenu = true %}

{% block title %}Villas{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if villas %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Nom </th>
                    <th>Description</th>
                    <th>Type de villa</th>
                </tr>
            </thead>
            {% for villa in villas %}
                <tr>
                    <td><a href="/villa/{{ villa.id }}">{{ villa.nom }}</a></td>
                    <td>{{ villa.description }}</td>
                    <td>{{ villa.typeVilla.libelle }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucune villa trouv√©e.</div>
{% endif %}   
{% endblock %}