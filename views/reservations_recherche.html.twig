{% extends "layout.html.twig" %}
{% set reservationMenu = true %}

{% block title %}Recherche de r√©servations{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form" action="/reservation/resultats/" method="post">
        <div class="form-group">
            <label class="col-sm-2 col-sm-offset-1 control-label">Villa</label>
            <div class="col-sm-7">
                <select class="form-control" name="famille">
                    {% for villa in villas %}
                        <option value="{{ villa.id }}">{{ villa.nom }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3 col-sm-offset-5">
                <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-search"></span> Rechercher</button>
            </div>
        </div>
    </form>
</div>
{% endblock %}